<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/dont_init"
        android:text="Don't init"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/load_after_init"
        android:text="Load after init"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/dont_init"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/init_and_load"
        android:text="Init and load"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/load_after_init"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/delay_init_and_load"
        android:text="Delay init and load"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/init_and_load"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/open_inspector"
        android:text="Open Inspector"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/delay_init_and_load"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>